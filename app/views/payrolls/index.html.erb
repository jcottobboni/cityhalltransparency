<%#= link_to 'New Payroll', new_payroll_path %>
<%= search_form_for @q do |f| %>

  <%= f.label :name_cont,'Nome' %>
  <%= f.search_field :name_cont %>

  <%= f.label :jobrole_name_cont ,'Cargo'%>
  <%= f.search_field :jobrole_name_cont %>

  <%= f.label :workspace_name_cont ,'Local de Trabalho'%>
  <%= f.search_field :workspace_name_cont %>

  <%= f.submit %>
<% end %>

<div class="col-12">
  <div class="card-box table-responsive">
    <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
      <div class="row">
        <div class="col-lg-12">
          <table id="datatable" class="table table-bordered">
            <thead>
            <tr>
              <th>Matricula</th>
              <th>Nome</th>
              <th>Cargo</th>
              <th>Local de Trabalho</th>
              <th>Data de Admissao</th>
              <th>Tipo de Admissao</th>
              <th>Secretaria</th>
              <th>Referencia</th>
              <th>Cidade</th>
            </tr>
            </thead>

            <tbody>
            <% @payrolls.each do |payroll| %>
              <tr role="row" class="odd">
                <td><%= payroll.registration %></td>
                <td><%= payroll.name %></td>
                <td><%= payroll.jobrole.name %></td>
                <td><%= payroll.workspace.name %></td>
                <td><%= payroll.admission_date %></td>
                <td><%= payroll.admission_type %></td>
                <td><%= payroll.city_hall_secretary_name %></td>
                <td><%= payroll.referency %></td>
                <td><%= payroll.city.name %></td>
                <%#= link_to 'Show', payroll %>
                <%#= link_to 'Edit', edit_payroll_path(payroll) %>
                <%#= link_to 'Destroy', payroll, method: :delete, data: {confirm: 'Are you sure?'} %>
              </tr>
            <% end %>
            </tbody>
            </table>
        </div>
      </div>

    </div>
  </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable();

        //Buttons examples
        var table = $('#datatable-buttons').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf']
        });

        table.buttons().container()
            .appendTo('#datatable-buttons_wrapper .col-md-6:eq(0)');
    });

</script>